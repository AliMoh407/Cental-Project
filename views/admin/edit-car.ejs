<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Car - Cental</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container mt-4">
        <h2>Edit Car</h2>
        
        <% if (error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>

        <form action="/admin/cars/edit/<%= car._id %>" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="brand">Brand</label>
                        <input type="text" class="form-control" id="brand" name="brand" value="<%= car.brand %>" required>
                    </div>

                    <div class="form-group mb-3">
                        <label for="model">Model</label>
                        <input type="text" class="form-control" id="model" name="model" value="<%= car.model %>" required>
                    </div>

                    <div class="form-group mb-3">
                        <label for="year">Year</label>
                        <input type="number" class="form-control" id="year" name="year" value="<%= car.year %>" required>
                    </div>

                    <div class="form-group mb-3">
                        <label for="price">Price (L.E/day)</label>
                        <input type="number" class="form-control" id="price" name="price" value="<%= car.price %>" required>
                    </div>

                    <div class="form-group mb-3">
                        <label for="licenseNumber">License Number</label>
                        <input type="text" class="form-control" id="licenseNumber" name="licenseNumber" value="<%= car.licenseNumber %>">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="4" required><%= car.description %></textarea>
                    </div>

                    <div class="form-group mb-3">
                        <label for="features">Features (comma-separated)</label>
                        <input type="text" class="form-control" id="features" name="features" value="<%= car.features.join(', ') %>">
                    </div>

                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="available" name="available" <%= car.available ? 'checked' : '' %>>
                            <label class="form-check-label" for="available">Available for Rent</label>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label>Current Images</label>
                        <div class="row">
                            <% car.images.forEach((image, index) => { %>
                                <div class="col-md-4 mb-2">
                                    <div class="position-relative">
                                        <img src="<%= image %>" class="img-thumbnail" alt="Car image <%= index + 1 %>">
                                        <button type="button" class="btn btn-danger btn-sm delete-image" 
                                                data-image-index="<%= index %>" 
                                                data-image-path="<%= image %>"
                                                onclick="deleteImage(this)">
                                            <i class="fas fa-trash"></i>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label for="images">Add More Images</label>
                        <div id="dropZone" class="drop-zone">
                            <div class="upload-icon">üìÅ</div>
                            <p>Drag and drop images here or click to select</p>
                            <input type="file" id="images" name="images" multiple accept="image/*" style="display: none;">
                        </div>
                        <small class="form-text text-muted">You can upload up to 5 images. Each image should be less than 5MB.</small>
                    </div>

                    <div id="imagePreview" class="row mt-2"></div>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Update Car</button>
                <a href="/admin/dashboard" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <style>
    .image-preview-container {
        position: relative;
        display: inline-block;
        margin: 5px;
    }

    .image-preview {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 4px;
    }

    .remove-image {
        position: absolute;
        top: -8px;
        right: -8px;
        background: red;
        color: white;
        border: none;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        line-height: 20px;
        text-align: center;
        cursor: pointer;
        font-size: 12px;
    }

    .delete-image {
        position: absolute;
        top: 5px;
        right: 5px;
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
        border-radius: 0.2rem;
    }

    .position-relative {
        position: relative;
    }

    .img-thumbnail {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    </style>

    <script>
    // Function to delete an image
    function deleteImage(button) {
        if (!confirm('Are you sure you want to delete this image?')) {
            return;
        }

        const imageIndex = button.getAttribute('data-image-index');
        const imagePath = button.getAttribute('data-image-path');
        
        // Create a hidden input to store deleted image paths
        let deletedImagesInput = document.getElementById('deletedImages');
        if (!deletedImagesInput) {
            deletedImagesInput = document.createElement('input');
            deletedImagesInput.type = 'hidden';
            deletedImagesInput.id = 'deletedImages';
            deletedImagesInput.name = 'deletedImages';
            document.querySelector('form').appendChild(deletedImagesInput);
        }

        // Add the image path to the deleted images list
        const deletedImages = deletedImagesInput.value ? JSON.parse(deletedImagesInput.value) : [];
        deletedImages.push({
            index: imageIndex,
            path: imagePath
        });
        deletedImagesInput.value = JSON.stringify(deletedImages);

        // Remove the image container
        button.closest('.col-md-4').remove();
    }

    // Initialize image upload functionality
    document.addEventListener('DOMContentLoaded', function() {
        const imageInput = document.getElementById('images');
        const previewContainer = document.getElementById('imagePreview');
        const maxFiles = 5;

        imageInput.addEventListener('change', function() {
            previewContainer.innerHTML = '';
            const files = Array.from(this.files);

            if (files.length > maxFiles) {
                alert(`You can only upload up to ${maxFiles} images`);
                this.value = '';
                return;
            }

            files.forEach((file, index) => {
                if (file.size > 5 * 1024 * 1024) {
                    alert(`File ${file.name} is too large. Maximum size is 5MB`);
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(e) {
                    const div = document.createElement('div');
                    div.className = 'col-md-4 mb-2';
                    div.innerHTML = `
                        <div class="image-preview-container">
                            <img src="${e.target.result}" class="img-thumbnail" alt="Preview ${index + 1}">
                            <button type="button" class="remove-image" title="Remove image">√ó</button>
                        </div>
                    `;
                    previewContainer.appendChild(div);
                }
                reader.readAsDataURL(file);
            });
        });
    });
    </script>

    <%- include('../partials/footer') %>
</body>
</html> 